# My custom aliases | $ source ~/.bashrc 
alias s='source ~/.bashrc'
alias a='s && alias | less'
alias e='emacs -nw'
alias grep='grep --color=auto'
# general aliases
alias c='clear'
alias h='history | less'
alias ps='ps aux'
alias du='du -sh'
alias df='df -hT'
alias o='xdg-open'
# directory navigation aliases
alias l='ls -lh --color=auto'
alias r='cd && l'
alias ..='cd .. && l'
alias ...='cd ../.. && l'
alias m='cd && cd MuggleBornPadawan && l'
alias w1='cd && cd MuggleBornPadawan/100_cpp/randomwalker/ && l'
# git 
alias g='git status'
alias gl='git log --oneline --decorate --graph'
alias gp="s && touch test.tmp && echo 'meowww at $(date)' >> test.tmp && git add . && git commit -m 'wip $(date +%s)' && git push"
# Safety & Security Aliases
alias pw='pass unKnoWn'
alias ln='ln -i'
alias rm='rm -i'
alias rm="trash-put"
# File Management Aliases
alias fo='r && o $(fzf)'
alias less='less -R'
alias get='curl -O'
alias mkdir='mkdir -p'
# npm
alias nu='npm list -g --depth=0 && npm outdated && npm update &&  npm audit fix --force && npm install -g npm-check-updates'
alias abc="s && echo 'test at $(date)'"
# clamav scan
alias scanFully='sudo clamscan -r -i /'
alias scanStatus='sudo freshclam && clamscan --version && sudo systemctl status clamav-freshclam'
# regular scripts 
alias remote='cd && ./MuggleBornPadawan/700_linux/remote_startup.sh'
alias commit='cd && ./MuggleBornPadawan/700_linux/bckp/commits.sh'
alias start='cd && ./MuggleBornPadawan/700_linux/bckp/start.sh'
alias sw='cd && ./MuggleBornPadawan/700_linux/scripts/wisdom_nugget_generator.sh'
alias sm='cd && ./MuggleBornPadawan/700_linux/scripts/gemini_artithmetic_test.sh'
alias sa='cd && ss && ./MuggleBornPadawan/700_linux/scripts/openrouter_aeo_script.sh'
alias ss="s && c && echo 'sleeping for few mins... $(date)' && sleep $((RANDOM % 600))"
# tmux commands
alias t='tmux a'
alias tn='tmux new -s "alpha"'
alias td='tmux detach'
alias tk='tmux kill-server'
alias tf='tmux set-option -g status off'
alias to='tmux set-option -g status on'
# gemini query and chat
alias q='./MuggleBornPadawan/700_linux/scripts/gemini_query.sh $1'
alias chat="cd && ./MuggleBornPadawan/700_linux/scripts/gemini_chat.sh"
# security
alias security="sudo ufw status verbose && sudo ufw version && echo 'use this command to get more info: sudo ufw app list'"
alias genpass="cd && ./MuggleBornPadawan/700_linux/scripts/password_generator.sh && cd -"
# cleanup
alias j='r && genpass && history -w && history -c && rm .bash_history Dockerfile Jenkinsfile tempFile* && c && echo "clean slate protocol activated"'
